<div class="container m-5">

  <div class="row my-3">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2 style="background-color:#F5F5F5;">新規投稿</h2>
  <div class="col-xs-10 col-xs-offset-1"style="margin-top: 50px;">
      <h2>投稿内容</h2>
  </div>
  </div>
</div>
<!--エラー文-->
<% if @item.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!--共有テンプレート-->
<%= render 'form', item: @item %>

</div>
