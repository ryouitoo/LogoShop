<div class="container mt-5">
  <div class="row my-3">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2 class="bg-light">新規投稿</h2>
    </div>
  </div>

  <% if @item.errors.any? %>
    <div class="alert alert-warning">
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<!--共有テンプレート-->

<%= render 'form', item: @item %>

</div>
