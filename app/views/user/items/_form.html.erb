 <%= form_with model: item do |f| %>

 <div class="row m-2 p-2">
  <div class="field col-md-4 offset-md-4 ">
      <%= f.label :作品 %>
      <%= f.file_field :item_image_url,accept:'item_image_url/*' %>
      </div>
      </div>
  <div class="row m-2 p-2">
  <div class="field col-md-4 offset-md-4 ">
      <%= f.label :作品名 %>
      <%= f.text_field :item_name %>
      </div>
      </div>
  <div class="row m-2 p-2">
  <div class="field col-md-4 offset-md-4 ">
      <%= f.label :作品説明 %>
      <%= f.text_area :explanation %>
      </div>
      </div>
  <div class="row m-2 p-2">
  <div class="field col-md-4 offset-md-4 ">
      <%= f.label :ジャンル %>
      <%= f.collection_select :genre_id, Genre.all ,:id, :genre_name, include_blank: "--選択してください--" %>
      </div>
      </div>
  <div class="row m-2 p-2">
  <div class="field col-md-4 offset-md-4 ">
     <%= f.submit %>
     <%= link_to items_path do %>
      <button>戻る</button>
      <% end %>
  </div>
  </div>
  <% end %>