<div class="container my-5">

  <div class="row my-3">
    <div class="col-md-10 mx-auto">
      <h2 class="bg-light p-3">マイページ</h2>
      <div class="row my-5">
        <div class="col-md-3">
          <%=image_tag @customer.account_image_url, width: "100%", height: "164px", style: "object-fit: cover;"  %>
        </div>
        <div class="col-md-9">
          <table class="table table-hover">
            <tbody>
              <tr>
                <th scope="row">氏名</th>
                <td><%= @customer.user_name %></td>
              </tr>
              <tr>
                <th scope="row">アカウント名</th>
                <td><%= @customer.account_name %></td>
              </tr>
              <tr>
                <th scope="row">メールアドレス</th>
                <td><%= @customer.email %></td>
              </tr>
            </tbody>
          </table>
          <% if @customer == current_customer && @customer.email != "guest@example.com" %>
            <%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

   <div class="row">
  <table class="table table-bordered">
  <thead>
    <tr>
      <th>作品名</th>
      <th>画像</th>
      <th>詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.item_name %></td>
        <td><%= image_tag item.item_image_url, class: "card-img-top", size: "90x100" %></td>
        <td>
          <div class='row'>
          <%= link_to "詳細", item_path(item.id), class: "btn btn-primary" %></td>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


</div>