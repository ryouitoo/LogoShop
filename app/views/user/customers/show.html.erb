<div class="container m-5">

  <div class="row my-3">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2 style="background-color:#F5F5F5;">マイページ</h2>
  <div class="col-xs-10 col-xs-offset-1"style="margin-top: 50px;">
      <h2>登録情報</h2>
  </div>
    <% if @customer == current_customer %>
    <%= link_to "編集する", edit_customer_path(current_customer), class: "btn btn-success"%>&ensp;
    <% end %>
        <table class="table table-striped table-hover">
          <thead>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">アイコン</th>
              <td><img src=<%= @customer.image %> class = "icon_image"></td>
              </tr>

            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">氏名</th>
              <td><%= @customer.user_name %></td>
            </tr>

            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">アカウント名</th>
              <td><%= @customer.account_name %></td>
            </tr>
            <tr class="table-head" style="background-color:#F5F5F5;">
              <th scope="col">メールアドレス</th>
              <td><%= @customer.email %></td>
            </tr>
          </thead>
	</table>
</div>
</div>
 <div class="row my-3">
   <% @items.each do |item| %>
   <table class="class">
     <thead>
       <tr>
         <th class="scope">作品</th>
         <th class="scope">作品名</th>
       </tr>
     </thead>
     <tbody>
       <th>
         <td class="scope">
           <!--イメージ-->
         </td>
         <td class="scope">
           <!--制作者-->
           <div>
          <%= link_to item_path(item.id) do %>
          <p class="item-title text-center">作品名: <%= item.item_name %></p>
          <% end %>
          </div>
         </td>
       </th>
     </tbody>
   </table>
</div>