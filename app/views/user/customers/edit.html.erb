<div class="container m-5">

<div class="row my-3">
   <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2 style="background-color:#F5F5F5;">マイページ</h2>
      <div class="col-xs-10 col-xs-offset-1"style="margin-top: 50px;">
      <h2>登録情報変更</h2>
      </div>
      <div style="background-color: #adb5bd">
				<%= form_with model: @customer,url:customers_information_path do |f| %>

				<div class="field m-2 p-2">
				    <%= f.label :アイコン %>
				    <%= f.file_field :image, autofocus: true, autocomplete: "email" %>
				 </div>

				<div class="field m-2 p-2">
				    <%= f.label :名前 %>
				    <%= f.text_field :user_name, autofocus: true, autocomplete: "email" %>
				 </div>

				 <div class="field m-2 p-2">
				    <%= f.label :アカウント名 %>
				    <%= f.text_field :account_name, autofocus: true, autocomplete: "email" %>
				 </div>

				 <div class="field m-2 p-2">
				    <%= f.label :メールアドレス %>
				    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
				 </div>

			   <%= f.submit "編集内容を保存する", class: "btn btn-primary"%>
			  <% end %>
				<%= link_to "退会する", customers_out_path, class: "btn btn-danger withdraw_page_btn"%>
		</div>
		</div>
	</div>
</div>
