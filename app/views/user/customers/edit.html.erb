<div class="container m-5">
  <div class="row my-3">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2 class="bg-light p-3">マイページ</h2>
      <div class="col-xs-10 col-xs-offset-1 mt-5">
        <h2>登録情報変更</h2>
      </div>
      <div class="p-3">
        <%= form_with model: @customer, url: customer_path, class: "form-horizontal" do |f| %>
          <div class="form-group row">
            <%= f.label :アイコン, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.file_field :image, autofocus: true, autocomplete: "email", class: "form-control-file" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :名前, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :user_name, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :アカウント名, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :account_name, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <%= f.label :メールアドレス, class: "col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
              <%= f.submit "編集内容を保存する", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
        <%= link_to "退会する", customers_out_path, class: "btn btn-danger withdraw_page_btn" %>
      </div>
    </div>
  </div>
</div>
