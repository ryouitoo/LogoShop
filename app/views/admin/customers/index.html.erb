<div class="container">
  <div class="row my-3">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2 style="background-color:#F5F5F5;">会員一覧</h2>
  </div>
  </div>
  <div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>アカウント名</th>
        <th>ユーザー名</th>
        <th>アカウント画像</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.account_name %></td>
          <td><%= customer.user_name %></td>
          <td><img src="<%= customer.image %>" alt="アカウント画像" style="width: 100px; height: 100px;"></td>
          <td>
            <%= link_to admin_customer_path(customer.id), class: "btn btn-primary btn-sm" do %>
              詳細
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

</div>
