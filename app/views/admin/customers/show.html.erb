<div class="container my-5">
  <div class="row my-3">
    <div class="col-md-10 mx-auto">
      <h2 class="bg-light p-3">マイページ</h2>
      <div class="row my-5">
        <div class="col-md-3">
          <img src=<%= @customer.image %> class="img-fluid rounded-circle">
        </div>
        <div class="col-md-9">
          <table class="table table-hover">
            <tbody>
              <tr>
                <th scope="row">氏名</th>
                <td><%= @customer.user_name %></td>
              </tr>
              <tr>
                <th scope="row">アカウント名</th>
                <td><%= @customer.account_name %></td>
              </tr>
              <tr>
                <th scope="row">メールアドレス</th>
                <td><%= @customer.email %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>


      <div class="row">
  <div class="col-md-12">
    <h2 class="bg-light p-3">作品一覧</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">画像</th>
          <th scope="col">作品名</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= image_tag item.item_image_url, size: "100x100", class: "img-fluid" %></td>
            <td><%= item.item_name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

      </div>
    </div>
  </div>
</div>
