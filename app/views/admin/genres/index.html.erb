<div class="container my-5">

  <div class="row my-3">
    <div class="col-sm-10 offset-sm-1">
      <h2 class="bg-light p-3">ジャンル一覧</h2>
    </div>
  </div>

  <%= render 'form', genre: @genre %>

  <div class="row mt-4">
    <% @genres.each do |genre| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= genre.genre_name %></h5>
            <%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= flash[:notice] %>

</div>